<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_140"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_hotel"
        android:layout_width="@dimen/dim_100"
        android:layout_height="match_parent"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/hotel" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/img_btn_fav"
        android:layout_marginLeft="@dimen/dim_75"
        android:layout_marginTop="@dimen/dim_3"
        android:src="@drawable/ic_favorite_border"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/img_hotel"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim_5"
        android:paddingLeft="@dimen/dim_10"
        android:paddingRight="@dimen/dim_10"
        android:paddingTop="@dimen/dim_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345 MXN"
            android:id="@+id/tv_sr_no"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dim_15"
                android:text="Rent"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <View
                android:id="@+id/vetical_view"
                android:layout_width="@dimen/dim_1"
                android:layout_height="@dimen/dim_15"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_rent"
                android:background="#DB4645" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_toRightOf="@+id/vetical_view"
                android:text="Posted On : 12 Oct 2017"
                android:textColor="@color/black"
                android:id="@+id/tv_date"
                android:textSize="@dimen/dim_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:background="#DB4645" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dim_2"
            android:paddingTop="@dimen/dim_2"
            android:text="2 BHK Flat 123 Towers"
            android:id="@+id/tv_description"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_location_label"
                android:text="xyz, 123 ABC"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dim_5"
        android:background="@drawable/gradient_red"
        android:paddingBottom="@dimen/dim_5"
        android:paddingLeft="@dimen/dim_10"
        android:paddingRight="@dimen/dim_10"
        android:paddingTop="@dimen/dim_5"
        android:id="@+id/tv_appointment"
        android:text="Immediate Appointment"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_2"
        android:layout_alignParentBottom="true"
        android:background="#B6B6B6" />
</RelativeLayout>