<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    tools:context="com.a123.PropertyDetailActivity">

    <include layout="@layout/new_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider_home_frag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_150" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dim_5"
            android:background="@null"
            android:src="@drawable/ic_favorite_border" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_10"
        android:background="@drawable/proceed_button"
        android:gravity="center"
        android:paddingLeft="@dimen/dim_50"
        android:paddingRight="@dimen/dim_50"
        android:text="Available"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_10"
            android:paddingTop="@dimen/dim_15">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="432 MXN"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_16" />

                <Space
                    android:id="@+id/space"
                    android:layout_width="@dimen/dim_50"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_min_price" />

                <TextView
                    android:id="@+id/tv_max_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/space"
                    android:text="4032 MXN"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dim_16" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="24 November 2017"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="For : SALE"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_prop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Type Of Property : Terreno"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="City : New Delhi"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_bedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Bedrooms : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_bedroom_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:paddingTop="@dimen/dim_5"
                android:text="Bedroom Description : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_general_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:paddingTop="@dimen/dim_5"
                android:text="General Description : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingTop="@dimen/dim_5"
                android:text="Equipment : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_included_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Included Services : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <TextView
            android:id="@+id/tv_maintenance_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dim_5"
            android:text="Maintenance Fee : "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_material_muros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Material-Muros : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_material_pisos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Material-Pisos : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_material_pinturas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Material-Pinturas : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_material_carpenteria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Material-Carpenteria : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_material_ventaneria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Material-Ventaneria : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
            android:id="@+id/tv_material_detalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dim_5"
            android:text="Material-Detalles De Construccion: "
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@+id/tv_material_muebles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Material-Muebles De Bano : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_techos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Techos : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_impermeabilizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Impermeabilizacion : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_llaves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Llaves Banos: "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_sanitarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Sanitarios : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_azulejos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Azulejos : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Estado de conservacion : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
            <TextView
                android:id="@+id/tv_discripion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_5"
                android:text="Discripion Para Anuncio : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
