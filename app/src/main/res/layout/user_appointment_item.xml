<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dim_10"
    android:paddingBottom="@dimen/dim_10"
    android:id="@+id/lrnr_info"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type : Casa"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_16"
        android:id="@+id/tv_property_type"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" For : Sale"
        android:textSize="@dimen/dim_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_5"
        android:id="@+id/tv_for"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" For : Sale"
        android:textSize="@dimen/dim_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_5"
        android:id="@+id/tv_time_date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" For : Sale"
        android:textSize="@dimen/dim_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_5"
        android:id="@+id/tv_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" For : Sale"
        android:textSize="@dimen/dim_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_5"
        android:id="@+id/tv_address"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" For : Sale"
        android:textSize="@dimen/dim_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_5"
        android:id="@+id/tv_mb_no"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" For : Sale"
        android:textSize="@dimen/dim_16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dim_5"
        android:id="@+id/tv_description"/>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/proceed_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="Detail"
        android:gravity="center"
        android:id="@+id/tv_btn_accept"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_18"
        android:layout_marginRight="@dimen/dim_5"
        android:paddingTop="@dimen/dim_5"
        android:paddingBottom="@dimen/dim_5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1"
        android:background="@color/black"
        android:layout_below="@+id/lrnr_info"/>
</RelativeLayout>