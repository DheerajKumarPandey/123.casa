<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dailog_bg">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/locate_me_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"


        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_30"
            android:gravity="center"
            android:text="Allow Location Acess"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_20"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@color/google_red"
            android:drawableLeft="@drawable/bbitmap"
            android:drawablePadding="@dimen/dim_7"
            android:gravity="center"
            android:paddingBottom="@dimen/dim_10"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_10"
            android:paddingTop="@dimen/dim_10"
            android:text="Locate Me"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_15"
            android:text="or"
            android:textSize="@dimen/dim_15" />

        <TextView
            android:id="@+id/txt_enter_manually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dim_35"
            android:layout_marginTop="@dimen/dim_20"
            android:gravity="center"
            android:text="Enter Location manually"
            android:textColor="@color/google_red"
            android:textSize="@dimen/dim_18"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>