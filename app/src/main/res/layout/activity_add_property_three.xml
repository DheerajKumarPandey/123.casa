<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a123.AddPropertyActivityThree">

    <include layout="@layout/property_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_btn_submit_three"
        android:layout_below="@+id/property_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dim_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_muros"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Muros" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_pisos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Pisos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_pinturas"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Pinturas" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_carpintería"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Carpintería" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_ventanería_y_elementos_térmicos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Ventanería y Elementos Térmicos" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_detalles_de_construcción"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Detalles De Construcción" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:background="@drawable/grey_rect_edt_bg"
                android:orientation="vertical"
                android:padding="@dimen/dim_10">

                <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                    android:id="@+id/searchMultiSpinner_muebles_de_bano"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:hintText="Muebles De Bano" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_10">

                <CheckBox
                    android:id="@+id/chk_box_alfombras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_checkbox"
                    android:buttonTint="@color/black"
                    android:padding="@dimen/dim_10"
                    android:text="Alfombras"
                    android:textSize="@dimen/dim_16" />

                <CheckBox
                    android:id="@+id/chk_box_falso_plafon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/chk_box_alfombras"
                    android:buttonTint="@color/black"
                    android:padding="@dimen/dim_10"
                    android:text="Falso Plafon"
                    android:textSize="@dimen/dim_16" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_techos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/grey_rect_edt_bg"
                    android:hint="Techos"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_10"
                    android:textSize="@dimen/dim_16" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <EditText
                    android:id="@+id/edt_impermeabilizacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/grey_rect_edt_bg"
                    android:hint="Impermeabilizacion"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_10"
                    android:textSize="@dimen/dim_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_llaves_banos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/grey_rect_edt_bg"
                    android:hint="Llaves Banos"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_10"
                    android:textSize="@dimen/dim_16" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <EditText
                    android:id="@+id/edt_sanitarios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/grey_rect_edt_bg"
                    android:hint="Sanitarios"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_10"
                    android:textSize="@dimen/dim_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_azulejos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/grey_rect_edt_bg"
                    android:hint="Azulejos"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_10"
                    android:textSize="@dimen/dim_16" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <EditText
                    android:id="@+id/edt_estado_de_conservacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/grey_rect_edt_bg"
                    android:hint="Estado de conservacion"
                    android:inputType="number"
                    android:paddingBottom="@dimen/dim_10"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:paddingTop="@dimen/dim_10"
                    android:textSize="@dimen/dim_16" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_15"
                android:text="Discripcion Para Anuncio : "
                android:textColor="@color/black"
                android:textSize="@dimen/dim_16" />

            <EditText
                android:id="@+id/edt_general_descriptions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_100"
                android:background="@drawable/grey_rect_edt_bg"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/dim_100"
                android:maxLines="5"
                android:paddingBottom="@dimen/dim_10"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10"
                android:paddingTop="@dimen/dim_10"
                android:textSize="@dimen/dim_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keys"

                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_18" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appointment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_18" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />
                </RadioGroup>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_18" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="Yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:text="No"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dim_16" />
                </RadioGroup>
            </RelativeLayout>

            <!--   <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dim_10">

                   <TextView
                       android:id="@+id/tv_property_img_label"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:text="Property Image : "
                       android:textColor="@color/black"
                       android:textSize="@dimen/dim_18" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="@dimen/dim_20"
                       android:layout_toRightOf="@+id/tv_property_img_label"
                       android:background="@drawable/connect_button"
                       android:paddingBottom="@dimen/dim_5"
                       android:paddingLeft="@dimen/dim_15"
                       android:paddingRight="@dimen/dim_15"
                       android:paddingTop="@dimen/dim_5"
                       android:text="Choose File"
                       android:textColor="@color/black"
                       android:textSize="@dimen/dim_16" />
               </RelativeLayout>-->
            <ListView
                android:id="@+id/lst_upload_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="@dimen/dim_50"
                    android:layout_height="@dimen/dim_50"
                    android:background="@drawable/img_btn_plus_bg"
                    android:text="+"
                    android:layout_marginRight="@dimen/dim_20"
                    android:layout_toLeftOf="@+id/btn_delete"
                    android:id="@+id/btn_add"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_30"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="@dimen/dim_50"
                    android:layout_height="@dimen/dim_50"
                    android:background="@drawable/img_btn_bg"
                    android:text="-"
                    android:id="@+id/btn_delete"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_30"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_btn_submit_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sign_up_button"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="Add Poperty"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_18"
        android:textStyle="bold" />

</RelativeLayout>
