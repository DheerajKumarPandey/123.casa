<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.a123.SignUpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@null"
    android:id="@+id/img_logo"
    android:src="@drawable/logo_name"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim_25"
        android:paddingRight="@dimen/dim_25"

        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout">

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:imeOptions="actionUnspecified"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:backgroundTint="#BAD4F2"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#3584D7" />


        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail ID"
                android:imeOptions="actionUnspecified"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:backgroundTint="#BAD4F2"
                android:textColor="@color/black"
                android:textColorHint="#3584D7" />


        </android.support.design.widget.TextInputLayout>
     <!--   <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:backgroundTint="#BAD4F2"
                android:textColor="@color/black"
                android:textColorHint="#3584D7" />


        </android.support.design.widget.TextInputLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayout">

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:backgroundTint="#BAD4F2"
                    android:textColor="@color/black"
                    android:textColorHint="#3584D7" />


            </android.support.design.widget.TextInputLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:id="@+id/img_btn_show_hide"
                android:src="@drawable/eye_open"
                android:layout_margin="@dimen/dim_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout">

            <EditText
                android:id="@+id/edt_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:imeOptions="actionUnspecified"
                android:inputType="date"
                android:maxLines="1"

                android:singleLine="true"
                android:backgroundTint="#BAD4F2"
                android:textColor="@color/black"
                android:textColorHint="#3584D7" />


        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout">

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No"
                android:imeOptions="actionUnspecified"
                android:inputType="phone"
                android:maxLines="1"

                android:singleLine="true"
                android:backgroundTint="#BAD4F2"
                android:textColor="@color/black"
                android:textColorHint="#3584D7" />


        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout">

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:imeOptions="actionUnspecified"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:backgroundTint="#BAD4F2"
                android:textColor="@color/black"
                android:textColorHint="#3584D7" />


        </android.support.design.widget.TextInputLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SIGN UP AS ?"
          android:textSize="@dimen/dim_18"
          android:textStyle="bold"
          android:id="@+id/tv_signup_as"
          android:padding="@dimen/dim_10"
          />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sign_up_button"
        android:text="Sign Up"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dim_10"
        android:id="@+id/tv_btn_signup"
       android:layout_centerHorizontal="true"
        android:textSize="@dimen/dim_20"
        android:textColor="@color/white"
       android:paddingTop="@dimen/dim_5"
        android:paddingBottom="@dimen/dim_5"
        android:paddingLeft="@dimen/dim_55"
        android:paddingRight="@dimen/dim_55"
        />
</RelativeLayout>
